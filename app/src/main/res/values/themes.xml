<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="Theme.Xui" parent="XUITheme.Phone">
        <!-- 自定义自己的主题样式 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="xui_round_btn_bg_color">@color/colorAccent</item>
        <item name="xui_round_btn_border_color">@color/colorAccent</item>

        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!--自定义标题栏样式方法1,通过自定义通用属性-->
        <item name="xui_actionbar_color">@color/colorAccent</item>
        <item name="xui_actionbar_text_color">@color/white</item>
        <item name="xui_actionbar_immersive">false</item>
    </style>

    <style name="PadButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dip</item>
        <item name="android:layout_marginBottom">8dip</item>
        <item name="android:layout_marginStart">8dip</item>
        <item name="android:layout_marginEnd">8dip</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="PadButtonStyle.Circle">
        <item name="android:background">@drawable/circular_selector</item>
    </style>

    <style name="PadButtonStyle.Ripple">
        <item name="android:background">@drawable/unbounded_selector</item>
        <item name="equalSpacing">false</item>
    </style>

    <style name="PadButtonStyle.Animation">
        <item name="android:background">@drawable/unbounded_selector_animation</item>
        <item name="equalSpacing">false</item>
    </style>

    <style name="PadButtonStyle.Border">
        <item name="android:layout_margin">0dip</item>
        <item name="android:background">@drawable/rectangle_selector</item>
        <item name="equalSpacing">false</item>
    </style>

    <style name="PadLayoutStyle">
        <item name="android:paddingTop">16dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingStart">24dip</item>
        <item name="android:paddingEnd">24dip</item>
    </style>

    <style name="DisplayEditTextStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">bottom|end</item>
    </style>

    <style name="DisplayEditTextStyle.Formula">
        <item name="android:paddingTop">24dip</item>
<!--        <item name="android:paddingBottom">24dip</item>-->
        <item name="android:paddingStart">16dip</item>
        <item name="android:paddingEnd">16dip</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>