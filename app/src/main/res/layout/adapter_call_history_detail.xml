<?xml version="1.0" encoding="utf-8"?>
<com.xuexiang.xui.widget.alpha.XUIAlphaLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detail_call_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:paddingTop="@dimen/xui_config_content_spacing_horizontal_tablet_small"
    android:paddingBottom="@dimen/xui_config_content_spacing_horizontal_tablet_big"
    android:orientation="horizontal"
    tools:ignore="MissingDefaultResource,PrivateResource,RtlHardcoded">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_call_date"
            style="@style/TextStyle.Title"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/low_black"
            android:textSize="18sp"
            tools:text="2023-03-03 13:13:13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_call_direction"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/xui_config_separator_height_phone"
                android:textSize="13sp"
                android:text="呼出"
                tools:ignore="PrivateResource" />
            <TextView
                android:id="@+id/tv_call_bill"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/xui_config_content_spacing_vertical_tablet_small"
                android:textSize="13sp"
                android:text="30分26秒"
                tools:ignore="PrivateResource" />
            <TextView
                android:id="@+id/tv_call_hangup_cause"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:text="正常挂断"
                tools:ignore="PrivateResource" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <ImageButton
            android:id="@+id/ib_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xui_config_content_spacing_vertical_tablet_small"
            android:padding="1dp"
            android:visibility="gone"
            android:src="@drawable/ic_baseline_play_circle_outline_24"
            tools:ignore="ContentDescription" />
    </LinearLayout>



</com.xuexiang.xui.widget.alpha.XUIAlphaLinearLayout>